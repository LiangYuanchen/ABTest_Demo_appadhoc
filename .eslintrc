{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "node": true,
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "describe": true,
    "context": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "Promise": true
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "no-unused-vars": "error",
    "no-undefined": "error",
    "strict": "error",
    "eqeqeq": "error",
    "curly": "error",
    "quotes": [
      "error",
      "single"
    ],
    "max-len": [
      "error",
      120
    ],
    "max-params": [
      "error",
      5
    ],
    "no-undef": "error",
    "semi": "error"
  }
}
